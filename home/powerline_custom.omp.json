{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "style": "plain",
                    "template": " \uf0e7 ",
                    "foreground": "#FFEE58",
                    "background": "",
                    "type": "root"
                },
                {
                    "style": "diamond",
                    "leading_diamond": "<transparent,background>\ue0b0</>",
                    "trailing_diamond": "\ue0b0",
                    "template": " {{ if .WSL }}WSL {{ end }}{{ .Icon }} ",
                    "foreground": "#26C6DA",
                    "background": "#546E7A",
                    "type": "os",
                    "properties": {
                        "fedoraremix": "ïŒŠ"
                    }
                },
                {
                    "properties": {
                        "mapped_shell_names": {
                            "pwsh": "PS"
                        }
                    },
                    "style": "diamond",
                    "trailing_diamond": "\ue0b0",
                    "foreground": "#ffffff",
                    "background": "#0077c2",
                    "type": "shell"
                },
                {
                    "properties": {
                        "style": "unique"
                    },
                    "style": "diamond",
                    "trailing_diamond": "\ue0b0",
                    "template": " {{ .Path }} ",
                    "foreground": "#100e23",
                    "background": "#0087d8",
                    "type": "path"
                },
                {
                    "style": "diamond",
                    "trailing_diamond": "\ue0b0",
                    "template": " {{ .HEAD }} ",
                    "foreground": "#193549",
                    "background": "#149b45",
                    "type": "git"
                },
                {
                    "style": "diamond",
                    "trailing_diamond": "\ue0b0",
                    "foreground": "#100e23",
                    "background": "#0077c2",
                    "template": " {{ if ne .Type \"unknown\" }}nix-shell{{ end }} ",
                    "type": "nix-shell"
                },
                {
                    "style": "diamond",
                    "trailing_diamond": "\ue0b0",
                    "template": " \ue235 {{ .Full }} ",
                    "foreground": "#100e23",
                    "background": "#8d75d6",
                    "type": "python"
                }
            ]
        }
    ],
    "version": 3,
    "auto_upgrade": true,
    "final_space": true
}