{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "alignment": "left",
            "segments": [
                {
                    "type": "shell",
                    "style": "powerline",
                    "powerline_symbol": "",
                    "foreground": "#ffffff",
                    "background": "#0077c2",
                    "properties": {
                        "mapped_shell_names": {
                            "pwsh": "PS"
                        }
                    }
                },
                {
                    "foreground": "#FFEE58",
                    "style": "plain",
                    "template": " \uf0e7 ",
                    "type": "root"
                },
                {
                    "background": "#0087d8",
                    "foreground": "#100e23",
                    "powerline_symbol": "",
                    "properties": {
                        "style": "full"
                    },
                    "style": "powerline",
                    "template": " {{ .Path }} ",
                    "type": "path"
                },
                {
                    "background": "#149b45",
                    "foreground": "#193549",
                    "powerline_symbol": "",
                    "style": "powerline",
                    "template": " {{ .HEAD }} ",
                    "type": "git"
                },
                {
                    "background": "#8d75d6",
                    "foreground": "#100e23",
                    "powerline_symbol": "",
                    "style": "powerline",
                    "template": "  {{ .Full }} ",
                    "type": "python"
                }
            ],
            "type": "prompt"
        }
    ],

    "final_space": true,
    "version": 2
}
