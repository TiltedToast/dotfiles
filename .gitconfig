[core]
	editor = code --wait
	sshCommand = ssh -i "~/.ssh/git" -o IdentitiesOnly=yes
	excludesfile = ~/.gitignore
	pager = delta
[user]
	name = Tim
	email = 57221600+TiltedToast@users.noreply.github.com
	signingkey = ~/.ssh/git.pub
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[commit]
	gpgsign = true
[gpg]
	format = ssh
[alias]
	logline = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[credential]
    helper = "/usr/bin/gh auth git-credential"
[init]
	defaultBranch = main
[rerere]
	enabled = true
[column]
	ui = auto
[branch]
	sort = -committerdate
[maintenance]
	repo = ~/projects/hifumi
[merge]
    autoStash = true
    conflictstyle = diff3
[rebase]
	autoStash = true
[pull]
	rebase = true
[diff]
	colorMoved = default
[delta]
	navigate = true
[interactive]
	diffFilter = delta --color-only
